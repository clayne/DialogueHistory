{
  "$schema": "https://raw.githubusercontent.com/Exit-9B/MCM-Helper/main/docs/config.schema.json",
  "modName": "DialogueHistory",
  "displayName": "$DH_Title_MCM",
  "minMcmVersion": 13,
  "pluginRequirements": [ "DialogueHistory.esp" ],
  "cursorFillMode": "topToBottom",
  "pages": [
    {
      "pageDisplayName": "$DH_Controls_Page",
      "cursorFillMode": "topToBottom",
      "content": [
        {
          "text": "$DH_OpenLocalHistory_Header",
          "type": "header"
        },
        {
          "id": "iLocalHistoryKey:Controls",
          "text": "$DH_PrimaryKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "id": "iLocalHistoryKeyModifier:Controls",
          "text": "$DH_ModifierKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "type": "empty"
        },
        {
          "text": "$DH_OpenGlobalHistory_Header",
          "type": "header"
        },
        {
          "id": "iGlobalHistoryKey:Controls",
          "text": "$DH_PrimaryKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "id": "iGlobalHistoryKeyModifier:Controls",
          "text": "$DH_ModifierKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "text": "$DH_OpenLocalHistory_Gamepad_Header",
          "type": "header",
          "position": 1
        },
        {
          "id": "iLocalHistoryGamePad:Controls",
          "text": "$DH_PrimaryKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "id": "iLocalHistoryGamePadModifier:Controls",
          "text": "$DH_ModifierKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "type": "empty"
        },
        {
          "text": "$DH_OpenGlobalHistory_Gamepad_Header",
          "type": "header"
        },
        {
          "id": "iGlobalHistoryGamePad:Controls",
          "text": "$DH_PrimaryKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "id": "iGlobalHistoryGamePadModifier:Controls",
          "text": "$DH_ModifierKey_Text",
          "type": "keymap",
          "ignoreConflicts": true,
          "valueOptions": {
            "sourceType": "ModSettingInt"
          }
        },
        {
          "type": "empty"
        },
        {
          "id": "iButtonScheme:Controls",
          "text": "$DH_ControllerButtonScheme_Text",
          "type": "enum",
          "valueOptions": {
            "options": [ "$DH_AUTODETECT", "$DH_XBOX", "$DH_PLAYSTATION" ],
            "sourceType": "ModSettingInt"
          }
        }
      ]
    },
    {
      "pageDisplayName": "$DH_SettingsPage",
      "cursorFillMode": "topToBottom",
      "content": [
        {
          "id": "b12HourFormat:Settings",
          "text": "$DH_12HourFormat_Text",
          "type": "toggle",
          "help": "$DH_12HourFormat_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "type": "empty"
        },
        {
          "text": "$DH_GlobalHistory_Header",
          "type": "header"
        },
        {
          "id": "bUnpauseGlobalHistory:Settings",
          "text": "$DH_UnpauseMenu_Text",
          "type": "toggle",
          "help": "$DH_UnpauseMenu_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bBlurGlobalHistory:Settings",
          "text": "$DH_BlurMenu_Text",
          "type": "toggle",
          "help": "$DH_BlurMenu_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bHideButtonGlobalHistory:Settings",
          "text": "$DH_HideButton_Text",
          "type": "toggle",
          "help": "$DH_HideButton_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "type": "empty"
        },
        {
          "text": "$DH_LocalHistory_Header",
          "type": "header"
        },
        {
          "id": "bUnpauseLocalHistory:Settings",
          "text": "$DH_UnpauseMenu_Text",
          "type": "toggle",
          "help": "$DH_UnpauseMenu_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bBlurLocalHistory:Settings",
          "text": "$DH_BlurMenu_Text",
          "type": "toggle",
          "help": "$DH_BlurMenu_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bHideButtonLocalHistory:Settings",
          "text": "$DH_HideButton_Text",
          "type": "toggle",
          "help": "$DH_HideButton_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "type": "empty"
        },
        {
          "text": "$DH_Title_Conversation",
          "position": 1,
          "type": "header"
        },
        {
          "id": "bSceneDialogueConversationHistory:Settings",
          "text": "$DH_SceneDialogue_Text",
          "type": "toggle",
          "help": "$DH_SceneDialogue_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bCombatDialogueConversationHistory:Settings",
          "text": "$DH_CombatDialogue_Text",
          "type": "toggle",
          "help": "$DH_CombatDialogue_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bFavorDialogueConversationHistory:Settings",
          "text": "$DH_FavorDialogue_Text",
          "type": "toggle",
          "help": "$DH_FavorDialogue_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bDetectionDialogueConversationHistory:Settings",
          "text": "$DH_DetectionDialogue_Text",
          "type": "toggle",
          "help": "$DH_DetectionDialogue_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        },
        {
          "id": "bMiscDialogueConversationHistory:Settings",
          "text": "$DH_MiscDialogue_Text",
          "type": "toggle",
          "help": "$DH_MiscDialogue_Help",
          "valueOptions": {
            "sourceType": "ModSettingBool"
          }
        }
      ]
    }
  ]
}